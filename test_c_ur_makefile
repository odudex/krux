CC = gcc
CFLAGS = -Wall -Wextra -g -O0 -std=c99
INCLUDES = -I.

# Source directories
UR_SRC_DIR = firmware/MaixPy/components/micropython/port/src/bc-ur/src

# Source files
SOURCES = test_c_ur.c \
          $(UR_SRC_DIR)/ur_decoder.c \
          $(UR_SRC_DIR)/fountain_decoder.c \
          $(UR_SRC_DIR)/fountain_utils.c \
          $(UR_SRC_DIR)/bytewords.c \
          $(UR_SRC_DIR)/utils.c \
          $(UR_SRC_DIR)/crc32.c

# Object files
OBJECTS = $(SOURCES:.c=.o)

# Target
TARGET = test_c_ur

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS) -o $(TARGET) -lm

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(TARGET)

test: $(TARGET)
	./$(TARGET)

.PHONY: all clean test